{
  "name": "demo-app",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "demo-app/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/demo-app",
        "main": "demo-app/src/main.ts",
        "tsConfig": "demo-app/tsconfig.app.json",
        "assets": ["demo-app/src/assets"],
        "webpackConfig": "demo-app/webpack.config.js"
      },
      "configurations": {
        "development": {},
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "demo-app:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "demo-app:build:development"
        },
        "production": {
          "buildTarget": "demo-app:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "demo-app/jest.config.ts"
      }
    }
  },
  "tags": ["tier:app"]
}
