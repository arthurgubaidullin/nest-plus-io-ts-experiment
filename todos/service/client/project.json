{
  "name": "client-service-in-todos",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "todos/service/client/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/todos/service/client",
        "main": "todos/service/client/src/index.ts",
        "tsConfig": "todos/service/client/tsconfig.lib.json",
        "assets": []
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "todos/service/client/jest.config.ts"
      }
    }
  },
  "tags": ["tier:api"]
}
